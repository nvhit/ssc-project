<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
    "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="vn.com.shensmartcity.domain.repository.employee.EmployeeRepository">
  <resultMap id="employeeResultMap" type="vn.com.shensmartcity.domain.model.Employee">
    <id property="staffCode" column="staff_code" />
    <result property="staffName" column="staff_name" />
    <result property="staffAccount" column="staff_account" />
    <result property="staffPass" column="staff_pass" />
  </resultMap>
  <select id="findById" parameterType="string" resultMap="employeeResultMap">
    SELECT
    staff_code,
    staff_name,
    staff_account,
    staff_pass
    FROM
    employee
    WHERE
    staff_code = #{staffCode}
  </select>

</mapper>
